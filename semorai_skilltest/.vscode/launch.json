    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run all Tests",
            "type": "debugpy",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "module": "pytest",
            "args": [
                "tests",
                "--verbose"
            ],
            "console": "integratedTerminal"
        }
        {
            "name": "Run Tests in Current File",
            "type": "debugpy",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "module": "pytest",
            "args": [
                "${file}"
            ],
            "console": "integratedTerminal"
        }
    ]
}